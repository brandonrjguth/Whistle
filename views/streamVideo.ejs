<html>
    <head>
        <link rel="stylesheet" type="text/css" href="styles.css">
        <script
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script>var socket = io();</script>
        <script src="https://kit.fontawesome.com/144ecfb073.js" crossorigin="anonymous"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    </head>
<body>
    <div class='header'>
        <div class='logo'>
            <img src="path34.png" class='logoImg'>
        </div>
    </div>

    <div class='content'>
<!------------------------------ -PLAYER CONTAINER --------------------------------->  
        <div class="bufferContainer hidden">
            <div class="loader"></div>
            <div class="syncText">Syncing</div>
        </div>
        <div class="playerContainer hidden">

<!-------------------------------- PLAYER SCREEN ----------------------------------->

            <div class='playerScreen'>
                <div id="embeddedArea">
                    <video src=""class="videoScreen" id="video"></video>
                    <video src="" id="YTPlayer" style="display:none" autoplay=false></video>
                </div>
                <div class='over'></div>
            </div>

<!-------------------------------- PLAYER CONTROLS ----------------------------------->

            <div class='playerControls'>
                <!---------------------------------------------------------- SEEKBAR ------------------------------------------------------->
                <div class="seekRow">
                    <input class="seekbar" type="range" min="0" max="100" value="0"></input>
                </div>
                 <!---------------------------------- HIDDEN CONTROLS ----------------------------------->
                <div class='hiddenControls' style="display:none">
                    <!-- HIDE CONTROLS BUTTON -->
                    <div id="hideControls">
                        <i class="fa fa-angle-double-down"></i>
                    </div>
                    <!-------------------------- LOAD URL ------------------------------>
                    <div class ="urlLoad" style="display:none">
                        <input type="text" placeholder="Paste a URL" class='urlInputText'></input>
                        <button class="btn" id="urlSubmit">LOAD</button>
                    </div>    
                    <!-------------------------- SEEK TO TIMESTAMP ------------------------------>
                    <div class="seekToRow" style="display:none">
                        <input id="hour" placeholder="Hour" type="text"></input>
                        <input id="minute" placeholder="Minute" type="text"></input>
                        <input id="second" placeholder="Second" type="text"></input>
                        <button id="seek">SEEK</button>
                    </div>
                    <!-------------------------- VOLUME ------------------------------>
                    <div class="volumeInput" style="display:none">
                        <button class='btn'>
                            <i class="fas fa-volume-mute"></i>
                        </button>
                        <button class='btn'>
                            <i class="fas fa-volume-down"></i>
                        </button>                    
                        <input class="volume" type="range" min="0" max="100" value="0"></input>
                        <button class='btn'>
                            <i class="fas fa-volume-up"></i>
                        </button>   
                    </div>
                </div>
            
                <!-------------------------- LOAD URL ------------------------------>

                <!------------------------------------------------- BUTTONS --------------------------------------------------------------------------------------->
                <div class="buttonRow">
                    <!-----------------Button Column 1 -------------------------------->
                    <div class="controls1">
                        <button class="btn" id="showLoadURL">LOAD VIDEO</button>
                        <button class="btn" id="showTimeIcon"><i class="far fa-clock"></i></button>   
                    </div>
                    <!-----------------Button Column 2 -------------------------------->
                    <div class="controls2">
                        <div class="playBackCommandsRow">
                            <button class="btn black" id="skipBack"><i class="fas fa-backward"></i></button>
                            <button class="btn black" id="playPause"><i class="fas fa-play"></i><i class="fas fa-pause"></i></button>
                            <button class="btn black" id="skipAhead"><i class="fas fa-forward"></i></button>
                        </div>
                    </div>
                    <!-----------------Button Column 3 -------------------------------->
                    <div class="controls3">
                        <button id="volumeButton" class="btn">
                            <i class="fas fa-volume-up"></i>
                        </button>
                        <button class="btn black" id="fullScreen"><i class="fas fa-expand"></i></button>
                    </div>
                </div>
            </div>

<!---- End of Player Container Div -->
        </div>

<!--------------- HIDDEN DIV------------------------->
        <div class="newUserWrapper">
            <div class="middleNewUserWrapper">
                <h1 class="joinChatText">JOIN CHAT</h1>
                <form class="usernameForm">
                    <div class="usernameBubble">
                    <input type="text" placeholder="Enter A Username" class="usernameText"></input>
                    </div>
                    <button class='submitUserButton'>ENTER</button>
                </form>
            </div>
        </div>

        <div class="chatContainer" style="display:none">
            <div class='chatMsgs'>
                <div class="msgs"></div>
            </div>
            
            <div class="chatBar">
                <form class="chatBarForm">
                    <input type="text" class="chatInputText" placeholder="Type a message">
                    <button class="submitChat">SEND</button>
                </form>
            </div>
        </div>
    </div>
    <script src="playerControls.js"></script>
    <script src="videoPlayer.js"></script>
    <script src="chat.js"></script>
    </body>
</html>